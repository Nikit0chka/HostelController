<Controls:MetroWindow
    x:Class="HostelController.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    Height="650"
    Width="900"
    
    GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
    WindowStartupLocation="CenterScreen"
    BorderThickness="2"
    ResizeMode = "NoResize">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="1 2 0 0">
            <Button x:Name="ShowHistoryButt" Style="{DynamicResource MahApps.Styles.Button.Square.Accent}" BorderBrush="White" Height="70" Content="История" FontSize="16" />
            <Button x:Name="ShowRoomsButt" Style="{DynamicResource MahApps.Styles.Button.Square.Accent}" BorderBrush="White" Height="70" Content="Комнаты" FontSize="16" Click="ShowRoomsButt_Click" />
        </StackPanel>

        <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Controls:MetroWindow>