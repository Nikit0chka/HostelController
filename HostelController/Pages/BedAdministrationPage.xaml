<Page x:Class="HostelController.BedAdministrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Height="650" Width="750"
      Background="White">
    
    <Page.Resources>
        <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource MahApps.Styles.TextBlock}">
            <Setter Property="Foreground" Value="{StaticResource MahApps.Brushes.AccentBase}"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="1"/>
        </Style>
    </Page.Resources>
    
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBlock Name="RoomNumber" FontSize="45" FontWeight="Bold"/>
            <TextBlock Name="BedNumber" FontSize="45" FontWeight="Bold"/>
            <TextBlock Name="BedStatucTxtBlc" Text="Свободна"  FontSize="45" FontWeight="Bold"/>
        </StackPanel>

        <UniformGrid HorizontalAlignment="Center" VerticalAlignment="Center" Columns="2">
            <TextBlock Name="DateOfEnty"/>
            <TextBlock Name="DateOfLeave"/>
            <TextBlock Name="TimeOfEntry"/>
            <TextBlock Name="TimeOfLeave"/>
            <TextBlock Name="ReamainTime"/>
        </UniformGrid>

        <StackPanel Name="ButtonStckPan" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 0 0 100"/>
    </Grid>
</Page>
