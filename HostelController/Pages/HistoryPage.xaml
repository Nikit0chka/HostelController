<Page x:Class="HostelController.Pages.HistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
      Height="650" Width="750"
      Background="White">

    <Grid>
        <DataGrid Name="ClientsHistoryDataGrid"
             AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn ElementStyle="{DynamicResource MetroDataGridCheckBox}"
                                        EditingElementStyle="{DynamicResource MetroDataGridCheckBox}"
                                        Header="IsSelected"
                                        />
                <DataGridTextColumn Header="Имя" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Фамилия" Binding="{Binding Surname}" />
                <DataGridTextColumn Header="Номер кровати" Binding="{Binding BedId}" />
                <DataGridTextColumn Header="Дата въезда" Binding="{Binding DateOfEntry}" />
                <DataGridTextColumn Header="Дата выезда" Binding="{Binding DateOfLeave}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
